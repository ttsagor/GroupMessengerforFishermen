<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <include layout="@layout/row_slim_header" />

    <include layout="@layout/header_timeline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:orientation="vertical"

                >          <LinearLayout
                android:layout_marginBottom="6dp"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/khetrofol_SaveImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/saveicon"
                    android:backgroundTint="@color/colorPrimaryDark" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"></View>

                <ImageView
                    android:id="@+id/khetrofol_ShareImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shareicon"
                    android:backgroundTint="@color/colorPrimaryDark" />

            </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="12dp"

                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/background_border">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/khetrofol_length"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@android:color/transparent"
                        android:hint="পুকুরের দৈর্ঘ্য(ফুট)"
                        android:inputType="number"
                        android:maxLines="1"


                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="12dp"

                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/background_border">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/khetrofol_width"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@android:color/transparent"
                        android:hint="পপুকুরের প্রস্থ(ফুট)"
                        android:inputType="number"
                        android:maxLines="1"


                        />

                </com.google.android.material.textfield.TextInputLayout>



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/khetrofol_agePonaSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"

                    android:background="@drawable/button_background"
                    android:text="নির্ণয় করুন"
                    android:textStyle="bold"

                    android:textColor="@color/windowBackground"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_marginTop="15dp"

                    android:id="@+id/countShowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"


                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"

                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/white_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".9"
                                android:orientation="vertical"
                                android:paddingLeft="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".01"
                                    android:orientation="horizontal"
                                    android:paddingTop="10dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5">

                                        <TextView
                                            android:id="@+id/khetrofol_sotangso_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="পুকুরের শতাংশ"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5">

                                        <TextView
                                            android:id="@+id/khetrofol_sotangso"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=":০"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".01"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5">

                                        <TextView
                                            android:id="@+id/khetrofol_hector_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="পুকুরের হেক্টর"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5">

                                        <TextView
                                            android:id="@+id/khetrofol_hector"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=":০"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.05"></View>
                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <include layout="@layout/new_footer_layout" />
    </LinearLayout>

</LinearLayout>
