<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/row_slim_header" />


    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        >

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            >

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >


                <TextView
                    android:text="পোনা মজুদের সূত্র"
                    android:id="@+id/pona_mojud_formula"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
         android:padding="8dp"
                    android:textColor="@color/textColorPrimary"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:padding="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="16dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginEnd="15dp"

            >

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:padding="8dp"
                    android:text="মাছের খাদ্য প্রয়োগের সূত্র"
                    android:id="@+id/khaddo_prooig_formula"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="22sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            >

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >


                <TextView

                    android:text="বয়স অনুযায়ী মাছের খাদ্য প্রয়োগ"
                    android:id="@+id/age_wise_food_formula"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:textColor="@color/textColorPrimary"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:padding="8dp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:padding="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="16dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginEnd="15dp"

            >

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="প্রোটিনের জন্য খাদ্য প্রস্তুত"
                    android:id="@+id/protin_wise_food"
                    android:padding="8dp"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="22sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            >

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >


                <TextView

                    android:text="পিপিএম নির্নয় ফরমুলা "
                    android:id="@+id/ppm_formula"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textColor="@color/textColorPrimary"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:padding="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="16dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginEnd="15dp"

            >

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:padding="8dp"
                    android:text="পুকুরের চুন/সার নির্নয় ফরমুলা"
                    android:id="@+id/fertilizer_formula"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="22sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            >

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >


                <TextView

                    android:text="পুকুরের ক্ষেত্রফল নির্নয় ফরমুলা"
                    android:id="@+id/khetrofol_formula"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textColor="@color/textColorPrimary"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:padding="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="16dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginEnd="15dp"

            >

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:padding="8dp"
                    android:text="পুকুরের আয়তন  নির্নয় ফরমুলা"
                    android:id="@+id/area_formula"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="22sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
