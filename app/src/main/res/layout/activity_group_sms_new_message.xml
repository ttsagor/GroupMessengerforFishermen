<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/row_slim_header" />

    <include layout="@layout/header_timeline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="সর্বমোট প্রাপক"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/GroupSmsNewMessageTotalFarmer" />
        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right"
    >


            <androidx.appcompat.widget.AppCompatButton
                android:textSize="16sp"

                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="টেমপ্লেট"
                android:background="@drawable/button_background"
                android:backgroundTint="#eee"
                android:textAllCaps="false"
                android:layout_marginEnd="15dp"
                android:textColor="@android:color/black"
                android:id="@+id/GroupSmsNewMessageSave"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:id="@+id/GroupSmsNewMessageSend"
                android:background="@drawable/button_background"
                android:textColor="@color/textColorPrimary"
                android:textSize="20dp"
                android:layout_marginEnd="15dp"
                android:text="বার্তা পাঠান"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:layout_weight=".7">

            <EditText
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:ems="10"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:id="@+id/GroupSmsNewMessageText"
                android:layout_weight="1"
               />
        </LinearLayout>
        <include layout="@layout/new_footer_layout" />
    </LinearLayout>



</LinearLayout>
