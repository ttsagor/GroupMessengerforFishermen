<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smsbg">


    <include layout="@layout/row_slim_header" />

    <include layout="@layout/header_timeline" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/white_bg"
                android:paddingLeft="20dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight=".8"
                  android:orientation="vertical">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:paddingTop="10dp"
                      android:paddingRight="20dp"
                      android:paddingLeft="10dp">
                      <com.google.android.material.textfield.TextInputLayout
                          android:layout_width="match_parent"
                          android:layout_marginBottom="8dp"
                           style="@style/TextInputLayoutStyle"
                          android:layout_height="wrap_content">

                          <com.google.android.material.textfield.TextInputEditText
                              android:layout_width="match_parent"
                              android:inputType="text"
                              android:layout_height="wrap_content"
                              android:id="@+id/addusername"
                              android:hint="নাম"/>

                      </com.google.android.material.textfield.TextInputLayout>

                      <com.google.android.material.textfield.TextInputLayout
                          android:layout_width="match_parent"
                          android:layout_marginBottom="8dp"
                          style="@style/TextInputLayoutStyle"
                          android:layout_height="wrap_content">

                          <com.google.android.material.textfield.TextInputEditText
                              android:id="@+id/adduserfathersname"
                              android:layout_width="match_parent"
                              android:inputType="text"
                              android:layout_height="wrap_content"
                              android:hint="পিতার নাম" />

                      </com.google.android.material.textfield.TextInputLayout>

                      <com.google.android.material.textfield.TextInputLayout
                          android:layout_width="match_parent"
                          android:layout_marginBottom="8dp"
                          style="@style/TextInputLayoutStyle"
                          android:layout_height="wrap_content">

                          <com.google.android.material.textfield.TextInputEditText
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/adduserfphonenumber"
                              android:inputType="number"
                              android:hint="মোবাইল নাম্বার"/>

                      </com.google.android.material.textfield.TextInputLayout>



                      <com.google.android.material.textfield.TextInputLayout
                          android:layout_width="match_parent"
                          android:layout_marginBottom="8dp"
                          style="@style/TextInputLayoutStyle"
                          android:layout_height="wrap_content">

                          <com.google.android.material.textfield.TextInputEditText
                              android:layout_width="match_parent"
                              android:inputType="text"
                              android:layout_height="wrap_content"
                              android:id="@+id/adduserfarmingcatagory"
                              android:hint="চাষের ধরণ"/>

                      </com.google.android.material.textfield.TextInputLayout>


                      <TextView
                          android:paddingStart="10dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:text="ইউনিয়নের নাম"
                          android:textColor="@color/colorPrimaryDark"
                          android:id="@+id/top_head_app_fish_farming_add_farmer_union_name"/>

                      <Spinner

                          android:layout_width="match_parent"
                          android:layout_height="30dp"
                          android:id="@+id/adduserunionlist" />
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"

                          android:orientation="horizontal"
                          android:gravity="center_horizontal">

                          <ImageView
                              android:tint="@color/colorPrimaryDark"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@drawable/saveicon"
                              android:id="@+id/adduserimageview"
                              android:layout_marginEnd="15dp"
                              android:backgroundTint="@color/colorPrimaryDark"
                              />

                          <ImageView
                              android:tint="@color/colorPrimaryDark"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@drawable/editicon"
                              android:backgroundTint="@color/colorPrimaryDark"
                              android:id="@+id/updateusereditbutton"/>
                      </LinearLayout>


                  </LinearLayout>

              </LinearLayout>
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>
</LinearLayout>
