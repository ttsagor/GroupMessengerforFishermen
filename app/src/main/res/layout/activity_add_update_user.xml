<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smsbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <include layout="@layout/row_slim_header" />

        <include layout="@layout/header_timeline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/white_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".8"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/addusername"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="নাম"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/adduserfathersname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="পিতার নাম"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/adduserfphonenumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="মোবাইল নাম্বার"
                                    android:inputType="number" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/adduserfarmingcatagory"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="চাষের ধরণ"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <TextView
                                android:id="@+id/top_head_app_fish_farming_add_farmer_union_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="ইউনিয়নের নাম"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/colorPrimaryDark" />

                            <Spinner

                                android:id="@+id/adduserunionlist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"

                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/updateusereditbutton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="15dp"
                                    android:background="@drawable/editicon"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/adduserimageview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="15dp"
                                    android:background="@drawable/saveicon"
                                    android:backgroundTint="@color/colorPrimaryDark" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/new_footer_layout" />
</RelativeLayout>
