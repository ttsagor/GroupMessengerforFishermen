<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smsbg"
    android:orientation="vertical">

    <include layout="@layout/row_slim_header" />

    <include layout="@layout/header_timeline" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".35"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:orientation="vertical"

                >


                <EditText
                    android:id="@+id/ppm_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_border"
                    android:hint=" দৈর্ঘ্য (ফুট)"
                    android:inputType="number"
                    android:minWidth="80dp"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/ppm_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_border"
                    android:hint="উচ্চতা(ফুট)"
                    android:inputType="number"
                    android:minWidth="80dp"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


                <EditText
                    android:id="@+id/ppm_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_border"
                    android:hint="প্রস্থ(ফুট)"
                    android:inputType="number"
                    android:minWidth="80dp"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


                <EditText
                    android:id="@+id/ppm_density"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_border"
                    android:hint="মাত্র (পিপিএম)"
                    android:inputType="number"
                    android:minWidth="80dp"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ppm_agePonaSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/button_background"
                    android:text="নির্ণয় করুন"
                    android:textColor="@color/windowBackground"
                    android:textSize="18sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.0" />

                <LinearLayout
                    android:id="@+id/countShowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:layout_weight=".3"
                    android:background="@drawable/white_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".6"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".04"
                                    android:orientation="horizontal"
                                    android:paddingTop="10dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".7">

                                        <TextView
                                            android:id="@+id/ppm_area_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="পুকুর/চৌবাচ্চার আয়তন (লিটার)"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".2">

                                        <TextView
                                            android:id="@+id/ppm_area"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=":০"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".1" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".04"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".7">

                                        <TextView
                                            android:id="@+id/ppm_med_quantity_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="দ্রবীভুত পদার্থ বা ঔষধের পরিমান (গ্রাম)"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".2">

                                        <TextView
                                            android:id="@+id/ppm_med_quantity"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=":০"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".04"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/ppm_SaveImg"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/saveicon"
                                        android:backgroundTint="@color/colorPrimaryDark" />

                                    <View
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent" />

                                    <ImageView
                                        android:id="@+id/ppm_ShareImg"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/shareicon"

                                        android:backgroundTint="@color/colorPrimaryDark" />


                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/new_footer_layout" />
    </LinearLayout>
</LinearLayout>


